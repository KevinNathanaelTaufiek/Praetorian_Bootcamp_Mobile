<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFragment"
    android:layout_marginVertical="24dp">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/ic_back"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/tv_lbl_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/ppoppins_semibold"
        android:layout_marginTop="24dp"
        android:text="Technoscape:"
        android:textColor="@color/bluePrimary"
        android:layout_below="@+id/tv_title"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_lbl_detail"
        android:textAlignment="center"
        android:text="TechnoScape is the biggest annual technology event held by Binus Computer Club (BNCC). Participants can learn with experts from the fields to widen their horizons, share ideas along with innovation, and solve real-life problems. TechnoScape has been held annually since 2018. Since then, it has been successful in providing information and education on the latest technology trends. This year, TechnoScape consists of 3 exciting events: Virtual Conference, Developer Workshop, and Hackathon 4.0, bringing insightful information for participants."
        android:textSize="18sp"/>

</RelativeLayout>